#!/usr/bin/bash

SDL=false
langs=C,C++,Rust

for flag in "$@"; do
  if [[ $flag == "--sdl"  ]]; then
    SDL=true
  fi
done

ctags -R -f tags         \
  --languages=$langs     \
  --fields=+iaS          \
  --extras=+q            \
  --kinds-C=+p           \
  --exclude=.git         \
  --exclude=build        \
  --exclude=assets       \
  --exclude=target       \

if [[ $SDL ]]; then
  ctags -R -a -f tags "/usr/local/include/SDL3"
fi
